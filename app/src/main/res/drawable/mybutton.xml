<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="7dip" />
            <stroke android:width="1dip" android:color="#3464DC" />
            <gradient android:angle="-90" android:startColor="#062A84" android:endColor="#3058BB"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="7dip" />
            <stroke android:width="1dip" android:color="#3464DC" />
            <solid android:color="#3058BB"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="7dip" />
            <stroke android:width="1dip" android:color="#3464DC" />
            <gradient android:angle="-90" android:startColor="#6184DC" android:endColor="#3058BB" />
        </shape>
    </item>
</selector>